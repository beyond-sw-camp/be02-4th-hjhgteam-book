pipeline {
    agent any

    environment {
        SLACK_CHANNEL = 'book'
        SLACK_TOKEN = credentials('slack-token')
    }

    stages {
        stage('git clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Hyeon-Kyun/configk8s'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'mvn package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    withCredentials([
                        usernamePassword(credentialsId: 'dockerjenkins', usernameVariable: 'DOCKERID', passwordVariable: 'DOCKERPW')
                    ]) {
                        def dockerImage = "kimhyeonkyun123/configk8sjenkins:1.${BUILD_NUMBER}"

                        sh "docker build -t $dockerImage ."
                        sh "docker login -u $DOCKERID -p $DOCKERPW"
                        sh "docker push $dockerImage"
                    }
                }
            }
        }

        stage('SSH Transfer and Kubernetes Deployment') {
            steps {
                script {
                    sshPublisher(
                        continueOnError: false, 
                        failOnError: true,
                        publishers: [
                            sshPublisherDesc(
                                configName: 'jenkins',
                                verbose: true,
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: 'config-deployment.yml',
                                        remoteDirectory: '/root/',
                                        execCommand: 'sed -i "s/VERSION/$BUILD_NUMBER/g" /root/config-deployment.yml'
                                    ),
                                    sshTransfer(
                                        execCommand: 'kubectl apply -f /root/config-deployment.yml'
                                    )
                                ]
                            )
                        ]
                    )
                }
            }
        }
    }

    post {
        success {
            slackSend(channel: env.SLACK_CHANNEL, color: 'good', message: "Job '${env.JOB_NAME}' (${env.BUILD_NUMBER}) succeeded!", tokenCredentialId: env.SLACK_TOKEN)
        }
        failure {
            slackSend(channel: env.SLACK_CHANNEL, color: 'danger', message: "Job '${env.JOB_NAME}' (${env.BUILD_NUMBER}) failed.", tokenCredentialId: env.SLACK_TOKEN)
        }
        unstable {
            slackSend(channel: env.SLACK_CHANNEL, color: 'warning', message: "Job '${env.JOB_NAME}' (${env.BUILD_NUMBER}) is unstable.", tokenCredentialId: env.SLACK_TOKEN)
        }
        changed {
            slackSend(channel: env.SLACK_CHANNEL, color: 'warning', message: "Job '${env.JOB_NAME}' (${env.BUILD_NUMBER}) had changes.", tokenCredentialId: env.SLACK_TOKEN)
        }
    }
}